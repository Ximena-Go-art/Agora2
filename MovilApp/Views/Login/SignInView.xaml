<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:login="clr-namespace:MovilApp.ViewModels.Login"
             x:Class="MovilApp.Views.Login.SignInView"
             Title="CrearCuenta">
    <ContentPage.BindingContext>
        <login:SignInViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Margin="20">
            <Grid RowDefinitions="2*,2*,2*,2*,2*,2*,*" ColumnDefinitions="*,*">
                <!-- Botón volver -->
                <Button Text="←"
                 Command="{Binding VolverCommand}"
                 BackgroundColor="BlueViolet"
                 TextColor="White"
                 FontSize="24"
                 HorizontalOptions="Start"
                 VerticalOptions="Center"
                 WidthRequest="50"
                 HeightRequest="50"
                 Margin="0,0,0,20"/>
                <Label Grid.Row="0" Grid.Column="0" 
                    HorizontalTextAlignment="End"
                    VerticalTextAlignment="Center"
                    Margin="5,10">Nombre:</Label>
                <Entry Grid.Row="0" Grid.Column="1" 
                    Text="{Binding Name}"
                    Margin="10,20,10,20"></Entry>
                <Label Grid.Row="1" Grid.Column="0" 
                    HorizontalTextAlignment="End"
                    VerticalTextAlignment="Center"
                    Margin="5,10">Apellido:</Label>
                <Entry Grid.Row="1" Grid.Column="1" 
                    Text="{Binding Lastname}"
                    Margin="10,20,10,20"></Entry>
                <Label Grid.Row="2" Grid.Column="0" 
                    HorizontalTextAlignment="End"
                    VerticalTextAlignment="Center"
                    Margin="5,10">DNI:</Label>
                <Entry Grid.Row="2" Grid.Column="1" 
                    Text="{Binding Dni}"
                    Margin="10,20,10,20"></Entry>
                <Label Grid.Row="3" Grid.Column="0" 
                    HorizontalTextAlignment="End"
                    VerticalTextAlignment="Center"
                    Margin="10,20">Email:</Label>
                <Entry Grid.Row="3" Grid.Column="1" 
                    Text="{Binding Email}"
                    Margin="10,20,10,20"></Entry>

                <Label Grid.Row="4" Grid.Column="0" 
                    HorizontalTextAlignment="End"
                    VerticalTextAlignment="Center"
                    Margin="10,20">Contraseña:</Label>
                <Entry Grid.Row="4" Grid.Column="1" 
                    Text="{Binding Password}"
                    Margin="10,20,10,20" IsPassword="True"></Entry>

                <Label Grid.Row="5" Grid.Column="0" 
                    HorizontalTextAlignment="End"
                    VerticalTextAlignment="Center"
                    Margin="10,20">Verificar Contraseña:</Label>
                <Entry Grid.Row="5" Grid.Column="1" 
                    Text="{Binding VerifyPassword}"
                    Margin="10,20,10,20" IsPassword="True"></Entry>

                <Button Text="Registrarse"
                     Command="{Binding RegistrarseCommand}"
                     Grid.Row="6" Grid.Column="0"
                     Grid.ColumnSpan="2"
                     Margin="0,15,0,0"
                     ></Button>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>